<?xml version="1.0" encoding="utf-8" ?>
<Defs>
    <!-- ====================================== Smock =========================================== -->
    <ThingDef ParentName="ApparelMakeableBase">
        <defName>RBPApparel_Smock</defName>
        <label>smock</label>
        <description>A set of artist's clothes: a smock, plaid cullotes and a frayed, striped shirt. Perfect for creatives and labourers to get down and dirty in.</description>
        <recipeMaker>
            <recipeUsers>
                <li>ElectricTailoringBench</li>
                <li>HandTailoringBench</li>
            </recipeUsers>
        </recipeMaker>
        <graphicData>
            <texPath>Things/Pawn/Humanlike/Apparel/RBPSmock/RBPSmockIC</texPath>
            <graphicClass>Graphic_Single</graphicClass>
        </graphicData>
        <costStuffCount>120</costStuffCount>
        <stuffCategories>
            <li>HF</li>
            <li>Fabric</li>
        </stuffCategories>
        <tradeability>Sellable</tradeability>
        <generateCommonality>0.5</generateCommonality>
        <statBases>
            <MaxHitPoints>200</MaxHitPoints>
            <WorkToMake>8000</WorkToMake>
            <Mass>0.6</Mass>
            <StuffEffectMultiplierArmor>0.3</StuffEffectMultiplierArmor>
            <StuffEffectMultiplierInsulation_Cold>0.75</StuffEffectMultiplierInsulation_Cold>
            <StuffEffectMultiplierInsulation_Heat>0.25</StuffEffectMultiplierInsulation_Heat>
            <EquipDelay>5</EquipDelay>
        </statBases>
        <equippedStatOffsets>
            <CarryBulk>18</CarryBulk>
            <WorkSpeedGlobal>-0.03</WorkSpeedGlobal>
            <MoveSpeed>-0.1</MoveSpeed>
			<NegotiationAbility>0.05</NegotiationAbility>
			<TradePriceImprovement>0.02</TradePriceImprovement>
			<GlobalLearningFactor>0.02</GlobalLearningFactor>
            <GermResistance>0.02</GermResistance>
            <GermContainment>0.02</GermContainment>
        </equippedStatOffsets>
        <thingCategories Inherit="False">
            <li>BodySuitsCat</li>
        </thingCategories>
        <apparel>
            <developmentalStageFilter>Adult</developmentalStageFilter>
            <bodyPartGroups>
                <li>Neck</li>
                <li>Torso</li>
                <li>Shoulders</li>
                <li>Arms</li>
                <li>Legs</li>
            </bodyPartGroups>
            <wornGraphicPath>Things/Pawn/Humanlike/Apparel/RBPSmock/RBPSmock</wornGraphicPath>
            <layers>
                <li>OnSkin</li>
                <li>Middle</li>
                <li>Shell</li>
            </layers>
            <defaultOutfitTags>
                <li>Worker</li>
            </defaultOutfitTags>
            <tags>
                <li>IndustrialBasic</li>
            </tags>
            <useWornGraphicMask>true</useWornGraphicMask>
            <canBeDesiredForIdeo>false</canBeDesiredForIdeo>
            <legsNakedUnlessCoveredBySomethingElse>false</legsNakedUnlessCoveredBySomethingElse>
        </apparel>
        <colorGenerator Class="ColorGenerator_StandardApparel"/>
        <researchPrerequisites>
            <li>Art_B1</li>
        </researchPrerequisites>
    </ThingDef>
	
    <!-- Creative Beret-->
	
    <ThingDef ParentName="HatMakeableBase">
        <defName>RBPApparel_CreativeBeret</defName>
        <label>artsy beret</label>
        <description>A plaid beret worn by creatives and labourers alike. Pretentiousness sold separately.</description>
        <possessionCount>1</possessionCount>
        <graphicData>
            <texPath>Things/Pawn/Humanlike/Apparel/RBPCreativeBeret/RBPCreativeBeretIC</texPath>
            <graphicClass>Graphic_Single</graphicClass>
            <drawSize>(0.6, 0.6)</drawSize>
        </graphicData>
        <techLevel>Industrial</techLevel>
        <tradeability>Sellable</tradeability>
        <generateCommonality>0.3</generateCommonality>
        <costStuffCount>40</costStuffCount>
        <stuffCategories>
            <li>HF</li>
            <li>Fabric</li>
        </stuffCategories>
        <statBases>
            <MaxHitPoints>100</MaxHitPoints>
            <WorkToMake>900</WorkToMake>
            <Mass>0.2</Mass>
            <StuffEffectMultiplierArmor>0.2</StuffEffectMultiplierArmor>
            <StuffEffectMultiplierInsulation_Cold>0.75</StuffEffectMultiplierInsulation_Cold>
            <StuffEffectMultiplierInsulation_Heat>0.2</StuffEffectMultiplierInsulation_Heat>
            <EquipDelay>1.5</EquipDelay>
        </statBases>
        <equippedStatOffsets>
            <MoveSpeed>-0.02</MoveSpeed>
			<NegotiationAbility>0.03</NegotiationAbility>
			<TradePriceImprovement>0.01</TradePriceImprovement>
			<GlobalLearningFactor>0.02</GlobalLearningFactor>
            <GermResistance>0.02</GermResistance>
            <GermContainment>0.02</GermContainment>
        </equippedStatOffsets>
        <apparel>
            <developmentalStageFilter>Adult</developmentalStageFilter>
            <countsAsClothingForNudity>false</countsAsClothingForNudity>
            <bodyPartGroups>
                <li>UpperHead</li>
            </bodyPartGroups>
            <wornGraphicPath>Things/Pawn/Humanlike/Apparel/RBPCreativeBeret/RBPCreativeBeret</wornGraphicPath>
            <layers>
                <li>Overhead</li>
            </layers>
            <tags>
                <li>IndustrialBasic</li>
            </tags>
            <defaultOutfitTags>
                <li>Worker</li>
            </defaultOutfitTags>
        </apparel>
		<thingCategories Inherit="False">
			<li>HeaddressCat</li>
		</thingCategories>
        <researchPrerequisites>
            <li>Art_B1</li>
        </researchPrerequisites>
    </ThingDef>
</Defs>
