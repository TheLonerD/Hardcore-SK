    <jobString>Cutting hard stone chunks into blocks.</jobString>
	<workerCounterClass>ImprovedWorkbenches.RecipeWorkerCounter_MultipleButcherProducts</workerCounterClass>
    <recipeUsers Inherit="False">
      <li>TableStonecutter</li>
      <li>TableMachining</li>
    </recipeUsers>
    <ingredients>
      <li>
        <filter>
          <categories>
            <li>HardStoneChunks</li>
          </categories>
        </filter>
        <count>1</count>
      </li>
    </ingredients>
    <specialProducts>
      <li>Butchery</li>
    </specialProducts>
    <fixedIngredientFilter>
      <categories>
        <li>HardStoneChunks</li>
      </categories>
    </fixedIngredientFilter>
    <workAmount>3000</workAmount>
    <workSkill>Crafting</workSkill>
    <workSkillLearnFactor>0.5</workSkillLearnFactor>
    <researchPrerequisite>ZF_HardStoneCuttingI</researchPrerequisite>
  </RecipeDef>


