<?xml version="1.0" encoding="utf-8"?>
<Defs>

  <RecipeDef ParentName="SK_MakeStoneBlocksBase">
    <defName>ProcessBlocklessChunks</defName>
    <label>process soft stone chunks</label>
    <description>Process soft stone chunks.\n\nClaystone Chunk:\n10 x Clay Bricks\n15 x Crushed Stone\n\nMudstone Chunk:\n25 x Mudstone Blocks</description>
    <jobString>Processing soft stone chunks.</jobString>
	<workerCounterClass>ImprovedWorkbenches.RecipeWorkerCounter_MultipleButcherProducts</workerCounterClass>
    <recipeUsers Inherit="False">
      <li>TableStonecutterNeolithic</li>
      <li>TableStonecutter</li>
      <li>TableMachining</li>
    </recipeUsers>
    <ingredients>
      <li>
        <filter>
          <categories>
            <li>SoftStoneChunks</li>
          </categories>
        </filter>
        <count>1</count>
      </li>
    </ingredients>
    <specialProducts>
      <li>Butchery</li>
    </specialProducts>
	<descriptionHyperlinks>
      <ThingDef>ChunkClaystone</ThingDef>
	  <ThingDef>ClayBrick</ThingDef>
	  <ThingDef>CrushedStone</ThingDef>
	  <ThingDef>ZF_ChunkMudstone</ThingDef>
	  <ThingDef>ZF_BlocksMudstone</ThingDef>
    </descriptionHyperlinks>
    <fixedIngredientFilter>
      <categories>
        <li>SoftStoneChunks</li>
      </categories>
    </fixedIngredientFilter>
    <workAmount>600</workAmount>
    <workSkill>Crafting</workSkill>
    <workSkillLearnFactor>0.3</workSkillLearnFactor>
  </RecipeDef>


  <RecipeDef ParentName="SK_MakeStoneBlocksBase">
    <defName>CutHardStoneBlocks</defName>
    <label>cut hard stone chunks</label>
