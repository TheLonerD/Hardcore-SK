<?xml version="1.0" encoding="utf-8" ?>
<Patch>

<Operation Class="PatchOperationFindMod">
	<mods>
		<li>Alpha Biomes</li>
	</mods>
	<match Class="PatchOperationSequence">
		<operations>
			<li Class="PatchOperationAdd">
				<xpath>Defs</xpath>
				<value>
					<Quarry.QuarryableStoneDef>
						<defName>GU_RoseQuartz_Override</defName>
						<rockDef>GU_RoseQuartz</rockDef> <!-- most important -->
						<chunkDef>GU_ChunkRoseQuartz</chunkDef> <!-- will be worked out from the rockDef if left blank -->
						<blockDef>GU_BlocksRoseQuartz</blockDef> <!-- will be worked out from the rockDef if left blank -->
						<terrainDefs> <!-- any terrainDefs you want to yield the above when under a quarry -->
							<!--li>GU_RedQuartzBase</li-->
							<li>GU_MossyRed</li>
						</terrainDefs>
					</Quarry.QuarryableStoneDef>
				</value>
			</li>
			
			<!-- Avoid duplicate labels, they will error -->
			
			<!-- Mudstone -->
			
			<li Class="PatchOperationReplace">
				<xpath>Defs/ThingDef[defName="AB_Mudstone"]/label</xpath>
				<value>
					<label>Mudrock</label>
				</value>
			</li>
			
			<li Class="PatchOperationReplace">
				<xpath>Defs/ThingDef[defName="AB_SmoothedMudstone"]/label</xpath>
				<value>
					<label>smoothed Mudrock</label>
				</value>
			</li>
			
			<li Class="PatchOperationReplace">
				<xpath>Defs/ThingDef[defName="AB_ChunkMudstone"]/label</xpath>
				<value>
					<label>Mudrock chunk</label>
				</value>
			</li>
			
			<li Class="PatchOperationReplace">
				<xpath>Defs/ThingDef[defName="AB_BlocksMudstone"]/label</xpath>
				<value>
					<label>Mudrock blocks</label>
				</value>
			</li>
			
			<li Class="PatchOperationReplace">
				<xpath>Defs/RecipeDef[defName="GU_MakeStoneBlocksMudstone"]/label</xpath>
				<value>
					<label>make mudrock blocks</label>
				</value>
			</li>
			
			<li Class="PatchOperationReplace">
				<xpath>Defs/RecipeDef[defName="GU_MakeStoneBlocksMudstone"]/description</xpath>
				<value>
					<description>Cuts mudrock chunks into usable blocks.</description>
				</value>
			</li>
			
			<li Class="PatchOperationReplace">
				<xpath>Defs/TerrainDef[defName="AB_TileMudstone"]/label</xpath>
				<value>
					<label>mudrock tile</label>
				</value>
			</li>
		
			<li Class="PatchOperationReplace">
				<xpath>Defs/TerrainDef[defName="AB_FlagstoneMudstone"]/label</xpath>
				<value>
					<label>mudrock flagstone</label>
				</value>
			</li>
		
		</operations>
	</match>
</Operation>

</Patch>