<?xml version="1.0" encoding="UTF-8"?>
<Patch>
    <Operation Class="PatchOperationAdd">
        <success>Always</success>
        <xpath>Defs/ThingDef[@ParentName="RockBase"]/building[isResourceRock="true" and not(veinMineable)]</xpath>
        <value>
            <veinMineable>true</veinMineable>
        </value>
    </Operation>
    
    <Operation Class="PatchOperationRemove">
        <success>Always</success>
        <xpath>Defs/WorkTypeDef/relevantSkills/li[text()="Melee"]</xpath>
    </Operation>
</Patch>