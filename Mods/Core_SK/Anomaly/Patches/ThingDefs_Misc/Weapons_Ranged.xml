<?xml version="1.0" encoding="UTF-8"?>
<Patch>

	<!-- CE had it set to 545x39Soviet -->
	<!-- Ammoset + slight buff -->
	<Operation Class="PatchOperationReplace">
		<xpath>Defs/ThingDef[defName="Gun_HellcatRifle"]/comps/li[@Class="CombatExtended.CompProperties_AmmoUser"]/ammoSet</xpath>
		<value>
			<ammoSet>AmmoSet_556x45mmNATO</ammoSet>
		</value>
	</Operation>

	<Operation Class="SK.PatchOperationReplaceExtended">
		<xpath>Defs/ThingDef[defName="Gun_HellcatRifle"]/verbs/li[@Class="CombatExtended.VerbPropertiesCE"]</xpath>
		<value>
            <recoilAmount>1.06</recoilAmount>
            <defaultProjectile>Bullet_556x45mmNATO_FMJ</defaultProjectile>
            <warmupTime>1.03</warmupTime>
            <range>54</range>
		</value>
	</Operation>

	<!-- 
	<Operation Class="PatchOperationRemove">
		<xpath>Defs/ThingDef[defName="Gun_HellcatRifle" or defName="Gun_Incinerator"]/costList</xpath>
	</Operation>

	<Operation Class="PatchOperationRemove">
		<xpath>Defs/ThingDef[defName="Gun_HellcatRifle" or defName="Gun_Incinerator"]/recipeMaker</xpath>
	</Operation> -->

	<Operation Class="SK.PatchOperationReplaceExtended">
		<xpath>Defs/ThingDef[defName="Gun_HellcatRifle" or defName="Gun_Incinerator"]</xpath>
		<value>
			<costList IsNull="True" />
			<recipeMaker IsNull="True" Inherit="False" />
			<smeltable>true</smeltable>
		</value>
	</Operation>

	<Operation Class="SK.PatchOperationReplaceExtended">
		<xpath>Defs/ThingDef[defName="Gun_HellcatRifle"]</xpath>
		<value>
            <thingCategories Inherit="False">
                <li>Rifles</li>
            </thingCategories>
			<smeltProducts>
				<AdvRifle_Component>1</AdvRifle_Component>
				<Weapon_Parts>5</Weapon_Parts>
			</smeltProducts>
		</value>
	</Operation>
    
    <Operation Class="SK.PatchOperationReplaceExtended">
		<xpath>Defs/ThingDef[defName="Gun_HellcatRifle"]/statBases</xpath>
		<value>
            <MarketValue>2150</MarketValue>
		</value>
	</Operation>

	<Operation Class="SK.PatchOperationReplaceExtended">
		<xpath>Defs/ThingDef[defName="NerveSpiker"]</xpath>
		<value>
            <thingCategories Inherit="False">
                <li>CrossbarRanged</li>
            </thingCategories>
		</value>
	</Operation>

	<Operation Class="SK.PatchOperationReplaceExtended">
		<xpath>Defs/ThingDef[defName="Gun_Incinerator"]</xpath>
		<value>
            <thingCategories Inherit="False">
                <li>Glaunchers</li>
            </thingCategories>
			<smeltProducts>
				<Heavy_Component>1</Heavy_Component>
				<Weapon_Parts>5</Weapon_Parts>
			</smeltProducts>
		</value>
	</Operation>
    
    <Operation Class="SK.PatchOperationReplaceExtended">
		<xpath>Defs/ThingDef[defName="Gun_Incinerator"]/statBases</xpath>
		<value>
            <MarketValue>2900</MarketValue>
		</value>
	</Operation>

</Patch>