<?xml version="1.0" encoding="UTF-8"?>
<Defs>

	<ThingDef ParentName="BodyPartGhoulBase">
		<defName>SK_GhoulClaw</defName>
		<label>ghoul claw</label>
		<description>Bioferrite claw designed specifically for ghouls, further sharpening their claws.\n\nDue to the extremely painful nature of the prosthetic, only ghouls can tolerate this enhancement.</description>
		<descriptionHyperlinks>
			<RecipeDef>InstallSK_GhoulClaw</RecipeDef>
		</descriptionHyperlinks>
		<statBases>
			<Mass>1</Mass>
			<Bulk>3</Bulk>
			<WorkToMake>10000</WorkToMake>
		</statBases>
		<techHediffsTags>
			<li>Ghoul</li>
		</techHediffsTags>
		<costList>
			<BioferriteAlloy>80</BioferriteAlloy>
			<ComponentIndustrial>5</ComponentIndustrial>
		</costList>
		<recipeMaker>
			<workSpeedStat>GeneralLaborSpeed</workSpeedStat>
			<workSkill>Crafting</workSkill>
			<effectWorking>Smith</effectWorking>
			<soundWorking>Recipe_Smith</soundWorking>
			<unfinishedThingDef>UnfinishedHealthItemGhoul</unfinishedThingDef>
			<researchPrerequisite>GhoulEnhancements</researchPrerequisite>
			<recipeUsers>
				<li>BioferriteShaper</li>
			</recipeUsers>
			<displayPriority>141</displayPriority>
		</recipeMaker>
	</ThingDef>

	<HediffDef ParentName="ImplantHediffBase">
		<defName>SK_GhoulClaw</defName>
		<label>ghoul claw</label>
		<description>Claw designed specifically for ghouls. They can trawl their victims' gut faster.</description>
		<stages>
			<li>
				<statOffsets>
					<MoveSpeed>-0.1</MoveSpeed>
				</statOffsets>
			</li>
		</stages>
		<comps>
			<li Class="HediffCompProperties_VerbGiver">
				<tools>
					<li Class="CombatExtended.ToolCE">
						<label>claw</label>
						<capacities>
							<li>Scratch</li>
						</capacities>
						<armorPenetrationSharp>5.3</armorPenetrationSharp>
						<armorPenetrationBlunt>2.4</armorPenetrationBlunt>
						<power>15</power>
						<cooldownTime>1.5</cooldownTime>
						<alwaysTreatAsWeapon>true</alwaysTreatAsWeapon>
					</li>
				</tools>
			</li>
		</comps>
		<spawnThingOnRemoved>SK_GhoulClaw</spawnThingOnRemoved>
	</HediffDef>

	<RecipeDef ParentName="SurgeryInstallImplantBase">
		<defName>InstallSK_GhoulClaw</defName>
		<label>install ghoul claw</label>
		<description>Install ghoul claw.</description>
		<descriptionHyperlinks>
			<ThingDef>SK_GhoulClaw</ThingDef>
			<HediffDef>SK_GhoulClaw</HediffDef>
		</descriptionHyperlinks>
		<jobString>Installing ghoul claw.</jobString>
		<skillRequirements>
			<Medicine>8</Medicine>
		</skillRequirements>
		<anesthetize>false</anesthetize>
		<surgeryOutcomeEffect IsNull="True" />
		<mutantPrerequisite>
			<li>Ghoul</li>
		</mutantPrerequisite>
		<ingredients Inherit="False">
			<li>
				<filter>
					<thingDefs>
						<li>SK_GhoulClaw</li>
					</thingDefs>
				</filter>
				<count>1</count>
			</li>
		</ingredients>
		<fixedIngredientFilter>
			<thingDefs>
				<li>SK_GhoulClaw</li>
			</thingDefs>
		</fixedIngredientFilter>
		<appliedOnFixedBodyParts>
			<li>Hand</li>
		</appliedOnFixedBodyParts>
		<addsHediff>SK_GhoulClaw</addsHediff>
		<researchPrerequisite>GhoulEnhancements</researchPrerequisite>
	</RecipeDef>


</Defs>