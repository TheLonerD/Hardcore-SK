<?xml version="1.0" encoding="utf-8"?>
<Patch>

    <Operation Class="PatchOperation.FindModByID">
    <mods>
        <li>mersid.backuppowerupdated</li>
    </mods>
    <match Class="PatchOperationSequence">
            <operations>
                <li Class="PatchOperationRemove">
                    <xpath>Defs/ResearchProjectDef[defName="BackupPower"]</xpath>
                </li>
                <li Class="PatchOperationReplace">
                    <xpath>Defs/ThingDef[defName="BackupPower_Attachment"]/researchPrerequisites</xpath>
                    <value>
                        <researchPrerequisites>
                            <li>Electrical_engineering_C2</li>
                        </researchPrerequisites>
                    </value>
                </li>
            </operations>
    </match>
    </Operation>

</Patch>