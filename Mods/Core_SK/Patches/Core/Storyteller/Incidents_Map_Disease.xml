<?xml version="1.0" encoding="UTF-8"?>
<Patch>

	<!-- Not all diseases are present in Incidents_Map_Disease_SK.xml. To simplify, I decided to make a patch that adds the missing lines -->

	<Operation Class="PatchOperationSequence">
		<success>Normal</success>
		<operations>
			<li Class="PatchOperationAdd">
				<xpath>Defs/IncidentDef[@Name="DiseaseIncident"]</xpath>
				<value>
					<earliestDay>30</earliestDay>
					<minRefireDays>15</minRefireDays>
				</value>
			</li>
		</operations>
	</Operation>

</Patch>