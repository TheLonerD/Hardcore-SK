<?xml version="1.0" encoding="UTF-8"?>
<Patch>

	<Operation Class="SK.PatchOperationShareXpath">
		<xpath>Defs/ThoughtDef[defName="SleepDisturbed"]</xpath>
		<operations>
			<li Class="SK.PatchOperationReplaceExtended">
				<value>
					<durationDays>0.5</durationDays>
					<stackLimit>4</stackLimit>
					<stackedEffectMultiplier>0.4</stackedEffectMultiplier>
					<nullifyingTraits>
						<li>DeepSleeper</li>
					</nullifyingTraits>
					<stages>
						<li>
							<label>disturbed sleep</label>
							<description>I was disturbed during sleep by people moving around nearby. A private room would solve this.</description>
							<baseMoodEffect>-4</baseMoodEffect>
						</li>
					</stages>
				</value>
			</li>
		</operations>
	</Operation>

	<Operation Class="SK.PatchOperationReplaceExtended">
		<xpath>Defs/ThoughtDef[defName="Rescued"]</xpath>
		<value>
			<durationDays>15</durationDays>
			<stackLimit>1</stackLimit>
			<stages>
				<li>
					<label>I could go home.</label>
					<description>The feeling that you can go home after having experienced so much is tantalizing, but I just can't leave this planet. This place is now my home.</description>
					<baseMoodEffect>15</baseMoodEffect>
				</li>
			</stages>
		</value>
	</Operation>


</Patch>