<?xml version="1.0" encoding="UTF-8"?>
<Patch>

	<Operation Class="SK.PatchOperationReplaceExtended">
		<xpath>Defs/ThoughtDef[defName="EnvironmentHot"]</xpath>
		<value>
			<nullifyingTraits>
				<li>ColdLover</li>
				<li>HeatLover</li>
			</nullifyingTraits>
			<stages>
				<li>
					<label>hot</label>
					<description>This heat is unpleasant. I'm sweating.</description>
					<baseMoodEffect>-5</baseMoodEffect>
				</li>
				<li>
					<label>very hot</label>
					<description>I'm really overheated.</description>
					<baseMoodEffect>-10</baseMoodEffect>
				</li>
				<li>
					<label>extremely hot</label>
					<description>I feel like I'm in an oven! I'm not sure how long I can handle this.</description>
					<baseMoodEffect>-15</baseMoodEffect>
				</li>
				<li>
					<label>burning up</label>
					<description>I'm burning up. I think I could die from this heat!</description>
					<baseMoodEffect>-20</baseMoodEffect>
				</li>
			</stages>
		</value>
	</Operation>

	<Operation Class="SK.PatchOperationReplaceExtended">
		<xpath>Defs/ThoughtDef[defName="EnvironmentCold"]</xpath>
		<value>
			<nullifyingTraits>
				<li>ColdLover</li>
				<li>HeatLover</li>
			</nullifyingTraits>
			<stages>
				<li>
					<label>cold</label>
					<description>I'm uncomfortably cold.</description>
					<baseMoodEffect>-5</baseMoodEffect>
				</li>
				<li>
					<label>very cold</label>
					<description>I'm so cold. Shivering. Can't get warm.</description>
					<baseMoodEffect>-8</baseMoodEffect>
				</li>
				<li>
					<label>freezing</label>
					<description>My teeth are chattering so hard I can barely speak. My toes are numb. I need to get warm.</description>
					<baseMoodEffect>-10</baseMoodEffect>
				</li>
			</stages>
		</value>
	</Operation>

	<Operation Class="SK.PatchOperationReplaceExtended">
		<xpath>Defs/ThoughtDef[defName="EnvironmentDark"]</xpath>
		<value>
			<developmentalStageFilter>Baby, Child, Adult</developmentalStageFilter>
			<nullifyingTraits>
				<li>Nyctophobe</li>
				<li>NightOwl</li>
				<li>Undergrounder</li>
				<li>Photophobia</li>
			</nullifyingTraits>
			<nullifyingGenes>
				<li MayRequire="Ludeon.RimWorld.Biotech">DarkVision</li>
			</nullifyingGenes>
			<stages>
				<li>
					<label>in darkness</label>
					<description>I've been in the dark for a while. I don't like it.</description>
					<baseMoodEffect>-3</baseMoodEffect>
				</li>
			</stages>
		</value>
	</Operation>

</Patch>