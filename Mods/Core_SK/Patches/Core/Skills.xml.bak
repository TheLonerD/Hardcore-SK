						<li>(10,-1.5)</li>
						<li>(11,-1.9)</li>
						<li>(12,-2.4)</li>
						<li>(13,-3)</li>
						<!-- Vanilla consider lvl 14 as master skill-->
						<li>(14,-3.7)</li>
						<li>(15,-3.2)</li>
						<li>(16,-2.1)</li>
						<li>(17,-1.9)</li>
						<li>(18,0)</li>
						<li>(19,-1.1)</li>
						<li>(20,-1.5)</li>
					</points>
				</decayCurve>
				<lossThreshold>
					<points>
						<li>(8,-840)</li>
						<li>(9,-2100)</li>
						<li>(10,-3150)</li>
						<li>(11,-3990)</li>
						<li>(12,-5040)</li>
						<li>(13,-6300)</li>
						<li>(14,-7770)</li>
						<li>(15,-6720)</li>
						<li>(16,-4410)</li>
						<li>(17,-3990)</li>
						<li>(19,-2310)</li>
						<li>(20,-3150)</li>
					</points>
				</lossThreshold>
			</li>
		</value>
	</Operation>

