<?xml version="1.0" encoding="UTF-8"?>
<Patch>

	<Operation Class="SK.PatchOperationReplaceExtended">
		<xpath>Defs/StatDef[defName="MeleeHitChance"]</xpath>
		<value>
			<postProcessCurve>
				<points>
					<li>(-20, 0.10)</li>
					<li>(-10, 0.20)</li>
					<li>(0, 0.60)</li>
					<li>(10, 1.20)</li>
					<li>(20, 2.00)</li>
				</points>
			</postProcessCurve>
			<showOnPawns>true</showOnPawns>
		</value>
	</Operation>

	<Operation Class="PatchOperationReplace">
		<xpath>Defs/StatDef[defName="MeleeCooldownFactor"]/showIfUndefined</xpath>
		<value>
			<showIfUndefined>true</showIfUndefined>
		</value>
	</Operation>

</Patch>