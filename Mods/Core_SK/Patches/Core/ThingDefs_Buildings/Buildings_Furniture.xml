<?xml version="1.0" encoding="UTF-8"?>
<Patch>

	<Operation Class="PatchOperationAttributeSet">
		<xpath>Defs/ThingDef[defName="FloodLight"]</xpath>
		<attribute>ParentName</attribute>
		<value>SK.SK_LampBaseDummy</value>
	</Operation>

	<Operation Class="SK.PatchOperationReplaceExtended">
		<xpath>Defs/ThingDef[defName="FloodLight"]</xpath>
		<value>
			<statBases>
				<MaxHitPoints>70</MaxHitPoints>
				<WorkToBuild>480</WorkToBuild>
				<Beauty>2</Beauty>
				<Bulk>15</Bulk>
				<Mass>5</Mass>
				<StyleDominance MayRequire="Ludeon.RimWorld.Ideology">1</StyleDominance>
			</statBases>
			<costList>
				<Glass>15</Glass>
				<Plastic>10</Plastic>
				<ComponentIndustrial>2</ComponentIndustrial>
				<ElectronicComponents>1</ElectronicComponents>
			</costList>
			<comps>
				<li Class="CompProperties_Flickable" />
				<li Class="CompProperties_Power">
					<compClass>CompPowerTrader</compClass>
					<basePowerConsumption>100</basePowerConsumption>
					<powerUpgrades>
						<li>
							<researchProject>ColoredLights</researchProject>
							<factor>0.5</factor>
						</li>
					</powerUpgrades>
				</li>
				<li Class="CompProperties_Glower">
					<glowRadius>12</glowRadius>
					<glowColor>(214,148,94,0)</glowColor>
					<colorPickerEnabled>true</colorPickerEnabled>
					<darklightToggle>true</darklightToggle>
				</li>
			</comps>
			<tickerType>Rare</tickerType>
			<building>
				<uninstallWork>300</uninstallWork>
			</building>
			<clearBuildingArea>false</clearBuildingArea>
			<designationHotKey>Misc2</designationHotKey>
			<filthLeaving>Filth_BrokenGlass</filthLeaving>
			<leaveResourcesWhenKilled>false</leaveResourcesWhenKilled>
			<researchPrerequisites>
				<li>Light_C3</li>
			</researchPrerequisites>
			<constructionSkillPrerequisite>8</constructionSkillPrerequisite>
		</value>
	</Operation>


	<Operation Class="PatchOperationAttributeSet">
		<xpath>Defs/ThingDef[defName="TorchWallLamp"]</xpath>
		<attribute>ParentName</attribute>
		<value>SK.SK_LampBaseDummy</value>
	</Operation>

	<Operation Class="SK.PatchOperationReplaceExtended">
		<xpath>Defs/ThingDef[defName="TorchWallLamp"]</xpath>
		<value>
			<label>wall torch</label>
			<thingClass>Building</thingClass>
			<description>A wall mounted torch for lighting an area. Can be refueled with kindling. Not a good source of heat. Must be placed on a wall. People need light to move and work at full speed.</description>
			<graphicData>
				<texPath>Things/Building/Furniture/Lights/WallTorch</texPath>
				<graphicClass>Graphic_Multi</graphicClass>
				<drawSize>(1.0,2.0)</drawSize>
				<drawRotated>true</drawRotated>
				<allowFlip>true</allowFlip>
			</graphicData>
			<uiIconPath>Things/Building/Furniture/Lights/WallTorch_ui</uiIconPath>
			<altitudeLayer>PawnUnused</altitudeLayer>
			<fillPercent>0.15</fillPercent>
			<tickerType>Normal</tickerType>
			<drawerType>RealtimeOnly</drawerType>
			<minifiedDef>MinifiedThing</minifiedDef>
			<statBases>
				<WorkToBuild>80</WorkToBuild>
				<MaxHitPoints>150</MaxHitPoints>
				<Flammability>0</Flammability>
				<Bulk>4</Bulk>
				<Mass>2</Mass>
				<StyleDominance MayRequire="Ludeon.RimWorld.Ideology">3</StyleDominance>
			</statBases>
			<leaveResourcesWhenKilled>false</leaveResourcesWhenKilled>
			<resourcesFractionWhenDeconstructed>0</resourcesFractionWhenDeconstructed>
			<size>(1,1)</size>
			<stuffCategories>
				<li>Kindlingstuff</li>
			</stuffCategories>
			<costStuffCount>10</costStuffCount>
			<costList/>
			<surfaceType>Item</surfaceType>
			<placeWorkers>
				<li>PlaceWorker_Heater</li>
				<li>SK.PlaceWorker_NotOnWall</li>
				<li>SK.PlaceWorker_WallAttachment</li>
			</placeWorkers>
			<drawPlaceWorkersWhileSelected>true</drawPlaceWorkersWhileSelected>
			<building>
				<uninstallWork>150</uninstallWork>
				<isEdifice>false</isEdifice>
				<canBuildNonEdificesUnder>true</canBuildNonEdificesUnder>
			</building>
			<clearBuildingArea>false</clearBuildingArea>
			<comps>
				<li Class="CompProperties_Refuelable">
					<fuelConsumptionRate>4.0</fuelConsumptionRate>
					<fuelCapacity>10.0</fuelCapacity>
					<fuelConsumptionPerTickInRain>0.045</fuelConsumptionPerTickInRain>
					<fuelFilter>
						<thingDefs>
							<li>Kindling</li>
						</thingDefs>
					</fuelFilter>
					<destroyOnNoFuel>false</destroyOnNoFuel>
					<showAllowAutoRefuelToggle>true</showAllowAutoRefuelToggle>
				</li>
				<li Class="CompProperties_Glower">
					<glowRadius>9</glowRadius>
					<glowColor>(217,177,113,0)</glowColor>
				</li>
				<li Class="SK.CompProperties_HeatPusherAdvanced">
					<compClass>SK.CompHeatPusherAdvanced</compClass>
					<heatPerSecond>4</heatPerSecond>
					<heatPushMaxTemperature>23</heatPushMaxTemperature>
				</li>
				<li Class="SK.CompProperties_FireOverlayMod">
					<fireSize>0.25</fireSize>
					<offset>(-0.48,0,0.15)</offset>
				</li>
				<li Class="SK.CompProperties_RestrictedPlacement">
					<compClass>SK.CompRestrictedPlacement</compClass>
				</li>
			</comps>
			<constructionSkillPrerequisite>2</constructionSkillPrerequisite>
		</value>
	</Operation>

	<Operation Class="PatchOperationAttributeSet">
		<xpath>Defs/ThingDef[defName="Couch"]</xpath>
		<attribute>ParentName</attribute>
		<value>SK.SK_ArtableFurnitureBaseDummy</value>
	</Operation>

	<Operation Class="SK.PatchOperationReplaceExtended">
		<xpath>Defs/ThingDef[defName="Couch"]</xpath>
		<value>
			<label>couch</label>
			<graphicData>
				<texPath>Things/Building/Furniture/Couch/sofa</texPath>
				<graphicClass>Graphic_Multi</graphicClass>
				<drawSize>(2,1)</drawSize>
				<shaderType>CutoutComplex</shaderType>
				<shadowData>
					<volume>(1.8, 0.6, 0.6)</volume>
				</shadowData>
				<damageData>
					<cornerTL>Damage/Corner</cornerTL>
					<cornerTR>Damage/Corner</cornerTR>
					<cornerBL>Damage/Corner</cornerBL>
					<cornerBR>Damage/Corner</cornerBR>
				</damageData>
			</graphicData>
			<altitudeLayer>Building</altitudeLayer>
			<passability>Standable</passability>
			<defaultPlacingRot>South</defaultPlacingRot>
			<description>A couch is type of furniture that could be suitable for two, but is usable by only one. It won't make colonists lazy, in theory at least.</description>
			<size>(2,1)</size>
			<statBases>
				<MaxHitPoints>150</MaxHitPoints>
				<WorkToBuild>1700</WorkToBuild>
				<Flammability>1.0</Flammability>
				<Beauty>8</Beauty>
				<Comfort>0.75</Comfort>
				<Bulk>70</Bulk>
				<Mass>50</Mass>
				<StyleDominance MayRequire="Ludeon.RimWorld.Ideology">10</StyleDominance>
			</statBases>
			<stuffCategories>
				<li>Fabric</li>
				<li>Leathery</li>
			</stuffCategories>
			<costStuffCount>80</costStuffCount>
			<costList>
				<ComponentIndustrial>6</ComponentIndustrial>
			</costList>
			<comps>
				<li>
					<compClass>CompGatherSpot</compClass>
				</li>
				<li Class="CompProperties_Styleable" />
			</comps>
			<designationCategory>Furniture</designationCategory>
			<researchPrerequisites>
				<li>Tables_C1</li>
			</researchPrerequisites>
			<building>
				<isSittable>true</isSittable>
				<paintable>true</paintable>
				<multiSittable>true</multiSittable>
				<destroySound>BuildingDestroyed_Soft_Small</destroySound>
			</building>
			<constructionSkillPrerequisite>7</constructionSkillPrerequisite>
		</value>
	</Operation>


	<Operation Class="SK.PatchOperationReplaceExtended">
