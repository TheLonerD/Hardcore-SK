<?xml version="1.0" encoding="utf-8"?>
<Patch>
	<Operation Class="PatchOperationFindMod">
		<mods>
			<li>SeedsPlease</li>
		</mods>
		<match Class="PatchOperationSequence">
			<operations>
				<li Class="PatchOperationAdd">
					<xpath>/Defs</xpath>
					<value>
						<SeedsPlease.SeedDef ParentName="SeedBase">
							<defName>Watermelon_seeds</defName>
							<label>Watermelon seeds</label>
							<sources>
								<li>Plant_Watermelon</li>
							</sources>
							<graphicData>
								<texPath>Things/Item/WatermelonSeed</texPath>
							</graphicData>
							 <statBases>
                                <MarketValue>9</MarketValue>
                             </statBases>
						</SeedsPlease.SeedDef>
					</value>
				</li>	
				<li Class="PatchOperationAdd">
					<xpath>/Defs</xpath>
					<value>
						<RecipeDef ParentName="ExtractSeed">
							<defName>ExtractWatermelon</defName>
							<label>Extract Watermelon</label>
							<description>Extract Watermelon</description>
							<ingredients>
								<li>
									<filter>
										<thingDefs>
											<li>RawWatermelon</li>
										</thingDefs>
									</filter>
									<count>1</count>
								</li>
							</ingredients>
							<fixedIngredientFilter>
								<thingDefs>
									<li>RawWatermelon</li>
								</thingDefs>
							</fixedIngredientFilter>
							<products>
								<Watermelon_seeds>5</Watermelon_seeds>
							</products>
						</RecipeDef>
					</value>
				</li>
									
			</operations>
		</match>
	</Operation>
</Patch>