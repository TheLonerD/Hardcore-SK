<?xml version="1.0" encoding="utf-8" ?>

<Patch>

	<Operation Class="PatchOperationFindMod">
		<mods>
			<li>Biotech</li>
		</mods>
		<match Class="PatchOperationSequence">
			<operations>
			
			<li Class="PatchOperationAdd">
			  <xpath>Defs/GeneDef[defName = "PerfectImmunity"]/makeImmuneTo</xpath>
			  <value>
				  <li>CommonCold</li>
				  <li>StrepThroat</li>
				  <li>Earache</li>
				  <li>Fever</li>
				  <li>Ebola</li>
				  <li>Measles</li>
				  <li>Pneumonia</li>
				  <li>Coronavirus</li>
			  </value>
			</li>	
					
			</operations>
		</match>
	</Operation>
	
</Patch>