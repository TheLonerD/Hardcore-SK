<?xml version="1.0" encoding="UTF-8"?>
<Patch>

	<Operation Class="PatchOperationAttributeSet">
		<xpath>Defs/ThingDef[	defName="CE_BarbedWire" or
								defName="CE_Embrasure"]</xpath>
		<attribute>ParentName</attribute>
		<value>SK.SK_BuildingBaseDummy</value>
	</Operation>
	<Operation Class="SK.PatchOperationReplaceExtended">
		<xpath>Defs/ThingDef[defName="CE_BarbedWire"]</xpath>
		<value>
			<label>barbed wire</label>
			<thingClass>Building_TrapDamager</thingClass>
			<graphicData>
				<texPath>Things/Building/Security/BarbedWire/BarbedWire_Atlas</texPath>
				<graphicClass>Graphic_Single</graphicClass>
				<linkType>Basic</linkType>
				<linkFlags>
					<li>Custom3</li>
				</linkFlags>
			</graphicData>
			<uiIconPath>Things/Building/Security/BarbedWire/BarbedWire_UI</uiIconPath>
			<altitudeLayer>Building</altitudeLayer>
			<pathCost>78</pathCost>
			<pathCostIgnoreRepeat>False</pathCostIgnoreRepeat>
			<passability>PassThroughOnly</passability>
			<castEdgeShadows>false</castEdgeShadows>
			<tickerType>Normal</tickerType>
			<fillPercent>0.05</fillPercent>
			<minifiedDef>MinifiedThing</minifiedDef>
			<thingCategories>
				<li>BuildingsSecurity</li>
			</thingCategories>
			<statBases>
				<TrapMeleeDamage>5</TrapMeleeDamage>
				<TrapSpringChance>0.5</TrapSpringChance>
				<MaxHitPoints>100</MaxHitPoints>
				<Beauty>-5</Beauty>
				<WorkToBuild>400</WorkToBuild>
				<Flammability>0</Flammability>
				<Mass>2</Mass>
			</statBases>
			<building>
				<uninstallWork>700</uninstallWork>
				<allowAutoroof>false</allowAutoroof>
				<isTrap>true</isTrap>
				<trapDestroyOnSpring>false</trapDestroyOnSpring>
				<trapDamageCategory>Sharp</trapDamageCategory>
				<ai_chillDestination>false</ai_chillDestination>
				<expandHomeArea>false</expandHomeArea>
				<isInert>true</isInert>
				<blueprintGraphicData>
					<texPath>Things/Building/Security/BarbedWire/BarbedWireBlueprint_Atlas</texPath>
				</blueprintGraphicData>
				<buildingTags>
					<li>ForceBuildDuringSiege</li>
				</buildingTags>
			</building>
			<description>Good fences make for good neighbor. This fencing is made out of razor wire to keep most people away.</description>
			<placingDraggableDimensions>1</placingDraggableDimensions>
			<costList>
				<Wire>8</Wire>
			</costList>
			<rotatable>false</rotatable>
			<holdsRoof>false</holdsRoof>
			<blockLight>false</blockLight>
			<neverMultiSelect>true</neverMultiSelect>
			<designationCategory>Security</designationCategory>
			<repairEffect>ConstructDirt</repairEffect>
			<leaveResourcesWhenKilled>false</leaveResourcesWhenKilled>
			<researchPrerequisites>
				<li>Fortification_B2</li>
			</researchPrerequisites>
			<constructionSkillPrerequisite>5</constructionSkillPrerequisite>
		</value>
	</Operation>

	<Operation Class="SK.PatchOperationReplaceExtended">
		<xpath>Defs/ThingDef[defName="CE_Embrasure"]</xpath>
		<value>
			<label>embrasure</label>
			<thingClass>SK.Building_Embrasure</thingClass>
			<graphicData>
				<texPath>Things/Building/Embrasure</texPath>
				<graphicClass>Graphic_Appearances</graphicClass>
				<linkType>CornerFiller</linkType>
				<linkFlags>
					<li>Wall</li>
					<li>Rock</li>
				</linkFlags>
				<damageData>
					<cornerTL>Damage/Corner</cornerTL>
					<cornerTR>Damage/Corner</cornerTR>
					<cornerBL>Damage/Corner</cornerBL>
					<cornerBR>Damage/Corner</cornerBR>
					<edgeTop>Damage/Edge</edgeTop>
					<edgeBot>Damage/Edge</edgeBot>
					<edgeLeft>Damage/Edge</edgeLeft>
					<edgeRight>Damage/Edge</edgeRight>
				</damageData>
			</graphicData>
			<uiIconPath>Things/Building/Embrasure/EmbrasureSmooth_MenuIcon</uiIconPath>
			<uiIconPathsStuff>
				<li>
					<appearance>Planks</appearance>
					<iconPath>Things/Building/Embrasure/EmbrasurePlanks_MenuIcon</iconPath>
				</li>
				<li>
					<appearance>Bricks</appearance>
					<iconPath>Things/Building/Embrasure/EmbrasureBricks_MenuIcon</iconPath>
				</li>
			</uiIconPathsStuff>
			<altitudeLayer>Building</altitudeLayer>
			<pathCost>85</pathCost>
			<passability>Impassable</passability>
			<castEdgeShadows>true</castEdgeShadows>
			<fillPercent>0.7</fillPercent>
			<tickerType>Rare</tickerType>
			<statBases>
				<MaxHitPoints>480</MaxHitPoints>
				<Beauty>-3</Beauty>
				<WorkToBuild>800</WorkToBuild>
			</statBases>
			<stuffCategories>
				<li>Woody</li>
				<li>Stony</li>
				<li>Bricks</li>
			</stuffCategories>
			<costStuffCount>8</costStuffCount>
			<costList>
				<ComponentIndustrial>2</ComponentIndustrial>
			</costList>
			<building>
				<ai_chillDestination>false</ai_chillDestination>
				<isInert>true</isInert>
				<canPlaceOverWall>true</canPlaceOverWall>
				<blueprintGraphicData>
					<texPath>Things/Building/Embrasure/Embrasure_Blueprint_Atlas</texPath>
				</blueprintGraphicData>
				<buildingTags>
					<li>ForceBuildDuringSiege</li>
				</buildingTags>
			</building>
			<description>A waist-high stone wall built for defense.</description>
			<placingDraggableDimensions>1</placingDraggableDimensions>
			<leaveResourcesWhenKilled>false</leaveResourcesWhenKilled>
			<rotatable>false</rotatable>
			<coversFloor>true</coversFloor>
			<holdsRoof>true</holdsRoof>
			<neverMultiSelect>true</neverMultiSelect>
			<useStuffTerrainAffordance>true</useStuffTerrainAffordance>
			<terrainAffordanceNeeded>Heavy</terrainAffordanceNeeded>
			<!-- Best affordance needed for stone -->
			<designationCategory>Security</designationCategory>
			<staticSunShadowHeight>0.20</staticSunShadowHeight>
			<repairEffect>ConstructDirt</repairEffect>
			<researchPrerequisites>
				<li>IEDs</li>
			</researchPrerequisites>
			<constructionSkillPrerequisite>6</constructionSkillPrerequisite>
			<modExtensions>
				<li Class="SK.EmbrasureExtension" />
			</modExtensions>
		</value>
	</Operation>
</Patch>