<?xml version="1.0" encoding="UTF-8"?>
<Patch>

	<Operation Class="SK.PatchOperationReplaceExtended">
		<xpath>Defs/StatDef[defName="AimingAccuracy"]</xpath>
		<value>
			<postProcessCurve>
				<points>
					<li>(0.0, 0.0)</li>
					<li>(0.5, 0.18)</li>
					<li>(1.0, 0.38)</li>
					<li>(1.5, 0.60)</li>
					<li>(2.0, 0.80)</li>
					<li>(6.5, 1.0)</li>
				</points>
			</postProcessCurve>
		</value>
	</Operation>

	<Operation Class="SK.PatchOperationReplaceExtended">
		<xpath>Defs/StatDef[defName="ShootingAccuracyPawn"]</xpath>
		<value>
			<postProcessCurve>
				<points>
					<li>(0.0, 0.0)</li>
					<li>(1.5, 1.60)</li> <!-- 5 shooting skill level -->
					<li>(2.5, 2.05)</li> <!-- 10 shooting skill level -->
					<li>(3.5, 2.30)</li> <!-- 15 shooting skill level -->
					<li>(3.9, 2.45)</li> <!-- 17 shooting skill level. 2.45 required for targeting certain body parts-->
					<li>(4.5, 2.60)</li> <!-- 20 shooting skill level -->
					<li>(5.5, 2.70)</li>
					<li>(6.5, 2.80)</li>
					<li>(13, 3.0)</li>
				</points>
			</postProcessCurve>
		</value>
	</Operation>

	<Operation Class="PatchOperationReplace">
		<xpath>Defs/StatDef[defName="ShootingAccuracyPawn"]/skillNeedOffsets/li[@Class="SkillNeed_BaseBonus"]</xpath>
		<value>
			<li Class="SkillNeed_BaseBonus">
			  <skill>Shooting</skill>
			  <baseValue>0.5</baseValue>
			  <bonusPerLevel>0.2</bonusPerLevel>
			</li>
		</value>
	</Operation>

</Patch>