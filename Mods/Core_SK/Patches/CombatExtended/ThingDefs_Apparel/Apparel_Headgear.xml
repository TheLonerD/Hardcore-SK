<?xml version="1.0" encoding="UTF-8"?>
<Patch>

	<!-- Remove unused def -->
	<Operation Class="PatchOperationRemove">
		<xpath>Defs/ThingDef[	defName="CE_Apparel_PlateHelmet" or
								defName="CE_Apparel_GasMask" or
								defName="CE_Apparel_ImproveGasMask"
								]
		</xpath>
	</Operation>

	<!-- Dummy Abstract Def -->
	

	<!-- Set ParentName -->
	<Operation Class="PatchOperationAttributeSet">
		<xpath>Defs/ThingDef[	defName="CE_Apparel_SimpleNightVision" or
								defName="CE_Apparel_AdvancedNightVision"]</xpath>
		<attribute>ParentName</attribute>
		<value>SK.ArmorIndustrialBaseDummy</value>
	</Operation>

	<!-- Replace whole def -->
	<Operation Class="SK.PatchOperationReplaceExtended">
		<xpath>Defs/ThingDef[defName="CE_Apparel_SimpleNightVision"]</xpath>
		<value>
			<label>night vision monocular</label>
			<description>A simple, monocular night vision device, worn strapped to the head.</description>
			<graphicData>
				<texPath>Things/Apparel/SimpleNightVision/SimpleNightVision</texPath>
				<graphicClass>Graphic_Single</graphicClass>
			</graphicData>
			<stuffCategories>
				<li>StrongMetallic</li>
			</stuffCategories>
			<costStuffCount>30</costStuffCount>
			<costList>
				<ComponentIndustrial>4</ComponentIndustrial>
				<SyntheticFibers>10</SyntheticFibers>
				<Compaste>10</Compaste>
				<Electronics>3</Electronics>
			</costList>
			<statBases>
				<WorkToMake>8000</WorkToMake>
				<MaxHitPoints>60</MaxHitPoints>
				<Flammability>1</Flammability>
				<Mass>0.5</Mass>
				<Bulk>3</Bulk>
				<WornBulk>1</WornBulk>
				<EquipDelay>0.5</EquipDelay>
				<NightVisionEfficiency_Apparel>0.4</NightVisionEfficiency_Apparel>
			</statBases>
			<equippedStatOffsets />
			<generateAllowChance>0.2</generateAllowChance>
			<apparel>
				<countsAsClothingForNudity>false</countsAsClothingForNudity>
				<developmentalStageFilter>Child, Adult</developmentalStageFilter>
				<bodyPartGroups>
					<li>Eyes</li>
				</bodyPartGroups>
				<wornGraphicPath>Things/Apparel/SimpleNightVision/SimpleNightVision</wornGraphicPath>
				<layers>
					<li>EyeCover</li>
				</layers>
				<tags>
					<li>IndustrialMilitaryAdvanced</li>
					<li>UniqueIndustrial</li>
					<li>NightVisionApparel</li>
				</tags>
				<defaultOutfitTags>
					<li>Soldier</li>
				</defaultOutfitTags>
				<useDeflectMetalEffect>true</useDeflectMetalEffect>
				<!-- <hatRenderedFrontOfFace>false</hatRenderedFrontOfFace> -->
				<canBeDesiredForIdeo>false</canBeDesiredForIdeo>
			</apparel>
			<modExtensions>
				<li Class="CombatExtended.ApperalRenderingExtension">
					<HideHair>false</HideHair>
					<HideBeard>false</HideBeard>
				</li>
			</modExtensions>
			<thingCategories>
				<li>AccessoriesCat</li>
			</thingCategories>
			<recipeMaker>
				<researchPrerequisite>FlakArmor</researchPrerequisite>
			</recipeMaker>
		</value>
	</Operation>

	<Operation Class="SK.PatchOperationReplaceExtended">
		<xpath>Defs/ThingDef[defName="CE_Apparel_AdvancedNightVision"]</xpath>
		<value>
			<label>advanced night vision goggles</label>
			<description>An set of advanced night vision goggles offering detailed, panoramic vision when fighting in the dark.</description>
