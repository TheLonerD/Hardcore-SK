				<li>StrongMetallic</li>
			</stuffCategories>
			<costStuffCount>30</costStuffCount>
			<costList>
				<ComponentIndustrial>4</ComponentIndustrial>
				<SyntheticFibers>10</SyntheticFibers>
				<Compaste>12</Compaste>
				<Hexcell>4</Hexcell>
			</costList>
			<statBases>
				<WorkToMake>14000</WorkToMake>
				<MaxHitPoints>70</MaxHitPoints>
				<Mass>0.75</Mass>
				<Bulk>5</Bulk>
				<WornBulk>1</WornBulk>
				<EquipDelay>0.5</EquipDelay>
				<NightVisionEfficiency_Apparel>0.6</NightVisionEfficiency_Apparel>
			</statBases>
			<generateAllowChance>0.1</generateAllowChance>
			<apparel>
				<countsAsClothingForNudity>false</countsAsClothingForNudity>
				<developmentalStageFilter>Child, Adult</developmentalStageFilter>
				<bodyPartGroups>
					<li>Eyes</li>
				</bodyPartGroups>
				<wornGraphicPath>Things/Apparel/AdvancedNightVision/AdvancedNightVision</wornGraphicPath>
				<layers>
					<li>EyeCover</li>
