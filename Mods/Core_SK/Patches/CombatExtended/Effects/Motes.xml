<?xml version="1.0" encoding="UTF-8"?>
<Patch>

	<!-- SK_MoteBase seems to be the same as MoteBase(Vanilla) -->
	<Operation Class="PatchOperationAttributeSet">
		<xpath>Defs/ThingDef[defName="Mote_BigExplode"]</xpath>
		<attribute>ParentName</attribute>
		<value>SK.SK_MoteBaseDummy</value>
	</Operation>

	<Operation Class="SK.PatchOperationReplaceExtended">
		<xpath>Defs/ThingDef[defName="Mote_BigExplode"]</xpath>
		<value>
			<mote>
				<fadeInTime>0.05</fadeInTime>
				<solidTime>0.4</solidTime>
				<fadeOutTime>0.45</fadeOutTime>
				<growthRate>15</growthRate>
			</mote>
		</value>
	</Operation>
</Patch>