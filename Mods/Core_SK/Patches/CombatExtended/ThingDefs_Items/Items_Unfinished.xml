<?xml version="1.0" encoding="UTF-8"?>
<Patch>


	<Operation Class="PatchOperationRemove">
		<xpath>Defs/ThingDef[defName="UnfinishedSteeledTechArmor"]</xpath>
	</Operation>
	
	<Operation Class="PatchOperationAttributeSet">
		<xpath>Defs/ThingDef[defName="UnfinishedTurretGun"]</xpath>
		<attribute>ParentName</attribute>
		<value>SK.SK_UnfinishedBaseDummy</value>
	</Operation>
	<Operation Class="SK.PatchOperationReplaceExtended">
		<xpath>Defs/ThingDef[defName="UnfinishedTurretGun"]</xpath>
		<value>
			<label>Unfinished turret gun</label>
			<description>An unfinished turret gun.</description>
			<graphicData>
				<texPath>Things/Item/Unfinished/UnfinishedTurret</texPath>
				<graphicClass>Graphic_Single</graphicClass>
			</graphicData>
			<stuffCategories Inherit="false" />
		</value>
	</Operation>

	<Operation Class="SK.PatchOperationReplaceExtended">
		<xpath>Defs/ThingDef[defName="MinifiedTurret_AGSThirty"]</xpath>
		<value>
			<statBases>
				<Mass>12</Mass>
				<Bulk>15</Bulk>
			</statBases>
		</value>
	</Operation>

	<Operation Class="SK.PatchOperationReplaceExtended">
		<xpath>Defs/ThingDef[defName="MinifiedTurret_KPV"]</xpath>
		<value>
			<statBases>
				<Mass>68</Mass>
				<Bulk>70</Bulk>
			</statBases>
		</value>
	</Operation>

	<Operation Class="SK.PatchOperationReplaceExtended">
		<xpath>Defs/ThingDef[defName="MinifiedTurret_Heavy"]</xpath>
		<value>
			<statBases>
				<Mass>70</Mass>
				<Bulk>80</Bulk>
			</statBases>
		</value>
	</Operation>

	<Operation Class="PatchOperationAttributeSet">
		<xpath>Defs/ThingDef[defName="UnfinishedShield"]</xpath>
		<attribute>ParentName</attribute>
		<value>SK.SK_UnfinishedBaseDummy</value>
	</Operation>
	<Operation Class="SK.PatchOperationReplaceExtended">
		<xpath>Defs/ThingDef[defName="UnfinishedShield"]</xpath>
		<value>
			<description>An unfinished piece of armor.</description>
			<graphicData>
				<texPath>Things/Item/Unfinished/UnfinishedWeapon</texPath>
				<graphicClass>Graphic_Single</graphicClass>
			</graphicData>
			<stuffCategories>
				<li>Fabric</li>
				<li>Leathery</li>
				<li>Metallic</li>
			</stuffCategories>
			<comps>
				<li>
					<compClass>CompColorable</compClass>
				</li>
			</comps>
		</value>
	</Operation>
</Patch>