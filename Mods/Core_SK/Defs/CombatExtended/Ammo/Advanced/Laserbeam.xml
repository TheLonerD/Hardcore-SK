	<!-- ==================== Recipes ========================== -->

	<RecipeDef ParentName="AmmoRecipeBase">
		<defName>MakeAmmo_ChargedLaser</defName>
		<label>make Charged Laser beam cartridge x40</label>
		<description>Craft 40 Charged Laser beam cartridges.</description>
		<jobString>Making Charged Laser beam cartridges.</jobString>
		<ingredients>
			<li>
				<filter>
					<categories>
						<li>SLDBar</li>
					</categories>
				</filter>
				<count>30</count>
			</li>
			<li>
				<filter>
					<categories>
						<li>USLDBar</li>
					</categories>
				</filter>
				<count>6</count>
			</li>
			<li>
				<filter>
					<thingDefs>
						<li>Hexcell</li>
					</thingDefs>
				</filter>
				<count>2</count>
			</li>
		</ingredients>
		<fixedIngredientFilter>
			<categories>
				<li>SLDBar</li>
				<li>USLDBar</li>
			</categories>
			<thingDefs>
				<li>Hexcell</li>
			</thingDefs>
		</fixedIngredientFilter>
		<products>
			<Ammo_ChargedLaser>40</Ammo_ChargedLaser>
		</products>
		<researchPrerequisite>ChargedShot</researchPrerequisite>
	</RecipeDef>

