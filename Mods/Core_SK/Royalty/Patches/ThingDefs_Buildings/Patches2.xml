			</li>
		</operations>
	</Operation>

	<Operation Class="PatchOperationSequence">
		<success>Always</success>
		<operations>
			<li Class="PatchOperationRemove">
				<xpath>Defs/ThingDef[defName = "ShipLandingBeacon"]/costList</xpath>
			</li>
			<li Class="PatchOperationAdd">
				<xpath>Defs/ThingDef[defName = "ShipLandingBeacon"]</xpath>
				<value>
					<minTechLevelToBuild>Industrial</minTechLevelToBuild>
					<stuffCategories>
						<li>RuggedMetallic</li>
					</stuffCategories>
					<costStuffCount>35</costStuffCount>
					<costList>
						<ComponentIndustrial>4</ComponentIndustrial>
					</costList>
				</value>
			</li>
		</operations>
	</Operation>

	<Operation Class="PatchOperationSequence">
		<success>Always</success>
		<operations>
			<li Class="PatchOperationRemove">
				<xpath>Defs/ThingDef[defName = "Drape"]/costList</xpath>
			</li>
			<li Class="PatchOperationAdd">
				<xpath>Defs/ThingDef[defName = "Drape"]</xpath>
				<value>
					<costList>
						<ComponentMedieval>12</ComponentMedieval>
					</costList>
				</value>
			</li>
		</operations>
	</Operation>

	<Operation Class="PatchOperationSequence">
		<success>Always</success>
		<operations>
			<li Class="PatchOperationRemove">
				<xpath>Defs/ThingDef[defName = "Brazier"]/stuffCategories</xpath>
			</li>
			<li Class="PatchOperationRemove">
				<xpath>Defs/ThingDef[defName = "Brazier"]/designationCategory</xpath>
			</li>
			<li Class="PatchOperationAdd">
				<xpath>Defs/ThingDef[defName = "Brazier"]</xpath>
				<value>
					<stuffCategories>
						<li>RuggedMetallic</li>
						<li>Stony</li>
					</stuffCategories>
					<costList>
						<ComponentMedieval>10</ComponentMedieval>
					</costList>
					<designationCategory>Accessories</designationCategory>
				</value>
			</li>
			<li Class="PatchOperationReplace">
				<xpath>Defs/ThingDef[defName="Brazier"]/comps/li[@Class="CompProperties_FireOverlay"]</xpath> 
				<value>
					<li Class="SK.CompProperties_FireOverlayMod">
						<offset>(0,0,0.22)</offset>
						<fireSize>1</fireSize>
					</li>
				</value>
			</li>
			<li Class="PatchOperationReplace">
				<xpath>Defs/ThingDef[defName="Brazier"]/comps/li[@Class="CompProperties_Refuelable"]</xpath> 
				<value>
					   <li Class="SK.CompFueled_Properties">
						<factorByDifficulty>false</factorByDifficulty>
						<operatingTemp>700</operatingTemp>
						<fuelCapacity>40</fuelCapacity>
						<burnFuelMultiplier>2.5</burnFuelMultiplier>
						<canAutoBurn>true</canAutoBurn>
						<smokeEnabled>false</smokeEnabled>
						<effectOnWeather>true</effectOnWeather>
						<smokeDensity>0</smokeDensity>
						<fuelFilter>
							<categories>
								<li>Wooden</li>
							</categories>  
							<thingDefs>
								<li>Kindling</li>
							 	<li>Charcoal</li>
								<li>Coal</li>
							</thingDefs>
						</fuelFilter>
					</li>
				</value>
			</li>
			<li Class="PatchOperationAdd">
				<xpath>Defs/ThingDef[defName="Brazier"]</xpath> 
				<value>
					<inspectorTabs>
						<li>SK.ITab_Fuel</li>
					</inspectorTabs>
				</value>
			</li>
			<li Class="PatchOperationReplace">
				<xpath>Defs/ThingDef[defName="Brazier"]/comps/li[@Class="CompProperties_HeatPusher"]</xpath> 
				<value>
					<li Class="SK.CompProperties_HeatPusherAdvanced">
						<compClass>SK.CompHeatPusherAdvanced</compClass>
						<heatPerSecond>3</heatPerSecond>
						<heatPushMaxTemperature>23</heatPushMaxTemperature>
					</li>
				</value>
			</li>
		</operations>
	</Operation>


	<Operation Class="PatchOperationFindMod">
		<mods>
			<li>Ideology</li>
		</mods>
		<match Class="PatchOperationSequence">
			<operations>
				<li Class="PatchOperationReplace">
					<xpath>Defs/ThingDef[defName="DarklightBrazier"]/comps/li[@Class="CompProperties_Refuelable"]</xpath> 
					<value>
						   <li Class="SK.CompFueled_Properties">
							<factorByDifficulty>false</factorByDifficulty>
							<operatingTemp>700</operatingTemp>
							<fuelCapacity>40</fuelCapacity>
							<burnFuelMultiplier>2.5</burnFuelMultiplier>
							<canAutoBurn>true</canAutoBurn>
							<smokeEnabled>false</smokeEnabled>
							<effectOnWeather>true</effectOnWeather>
							<smokeDensity>0</smokeDensity>
							<fuelFilter>
								<categories>
									<li>Wooden</li>
								</categories>  
								<thingDefs>
									<li>Kindling</li>
									<li>Charcoal</li>
									<li>Coal</li>
								</thingDefs>
							</fuelFilter>
						</li>
					</value>
				</li>
				<li Class="PatchOperationAdd">
					<xpath>Defs/ThingDef[defName="DarklightBrazier"]</xpath> 
					<value>
						<inspectorTabs>
							<li>SK.ITab_Fuel</li>
						</inspectorTabs>
					</value>
				</li>
				<li Class="PatchOperationReplace">
					<xpath>Defs/ThingDef[defName="DarklightBrazier"]/comps/li[@Class="CompProperties_HeatPusher"]</xpath> 
					<value>
						<li Class="SK.CompProperties_HeatPusherAdvanced">
							<compClass>SK.CompHeatPusherAdvanced</compClass>
							<heatPerSecond>3</heatPerSecond>
							<heatPushMaxTemperature>23</heatPushMaxTemperature>
						</li>
					</value>
				</li>
			</operations>
		</match>
	</Operation>

	<Operation Class="PatchOperationSequence">
		<success>Always</success>
		<operations>
			<li Class="PatchOperationRemove">
				<xpath>Defs/ThingDef[defName = "Throne"]/stuffCategories</xpath>
			</li>
			<li Class="PatchOperationAdd">
				<xpath>Defs/ThingDef[defName = "Throne"]</xpath>
				<value>
					<stuffCategories>
						<li>RuggedMetallic</li>
						<li>Stony</li>
					</stuffCategories>
				</value>
			</li>
		</operations>
	</Operation>

	<Operation Class="PatchOperationSequence">
		<success>Always</success>
		<operations>
			<li Class="PatchOperationRemove">
				<xpath>Defs/ThingDef[defName = "GrandThrone"]/stuffCategories</xpath>
			</li>
			<li Class="PatchOperationAdd">
				<xpath>Defs/ThingDef[defName = "GrandThrone"]</xpath>
				<value>
					<stuffCategories>
						<li>RuggedMetallic</li>
						<li>Stony</li>
					</stuffCategories>
				</value>
			</li>
			<li Class="PatchOperationReplace">
				<xpath>Defs/ThingDef[defName="GrandThrone"]/costList</xpath>
				<value>
					<costList>
						<GoldBar>100</GoldBar>
						<ComponentMedieval>30</ComponentMedieval>
					</costList>
				</value>
			</li>
		</operations>
	</Operation>

	<Operation Class="PatchOperationReplace">
		<xpath>Defs/ThingDef[@Name="NatureShrineBase"]/designationCategory</xpath>
		<value>
			<designationCategory>Joy</designationCategory>
		</value>
	</Operation>

	<Operation Class="PatchOperationSequence">
		<success>Always</success>
		<operations>
			<li Class="PatchOperationReplace">
				<xpath>Defs/ThingDef[defName = "MechCapsule"]/comps/li[@Class= "CompProperties_PawnSpawnOnWakeup"]</xpath>
				<value>
					<li Class="CompProperties_PawnSpawnOnWakeup">
						<points>850</points>
						<!-- Slightly more than centipedeinferno's 840 -->
						<spawnablePawnKinds>
							<li>Mech_Scyther</li>
							<li>Mech_ScytherHG</li>
							<li>Mech_Lancer</li>
							<li>Mech_SniperLancer</li>
							<li>Mech_CentipedeBlaster</li>
							<li>Mech_CentipedeGunner</li>
							<li>Mech_CentipedeBurner</li>
							<li>Mech_Pikeman</li>
							<li>Mech_Crawler</li>
						</spawnablePawnKinds>
						<spawnSound>CryptosleepCasket_Eject</spawnSound>
						<lordJob>LordJob_MechanoidsDefend</lordJob>
						<shouldJoinParentLord>True</shouldJoinParentLord>
					</li>
				</value>
			</li>
		</operations>
	</Operation>

	<Operation Class="PatchOperationSequence">
		<success>Always</success>
		<operations>
			<li Class="PatchOperationReplace">
				<xpath>Defs/ThingDef[defName = "MechDropBeacon"]/comps/li[@Class= "CompProperties_PawnSpawnOnWakeup"]</xpath>
				<value>
					<li Class="CompProperties_PawnSpawnOnWakeup">
						<points>800~1300</points>
						<dropInPods>True</dropInPods>
						<pawnSpawnRadius>10~30</pawnSpawnRadius>
						<spawnEffecter>MechDropBeaconActivated</spawnEffecter>
						<activatedMessageKey>MessageMechanoidsReinforcementsDrop</activatedMessageKey>
						<spawnablePawnKinds>
							<li>Mech_Scyther</li>
							<li>Mech_ScytherHG</li>
							<li>Mech_Lancer</li>
							<li>Mech_SniperLancer</li>
							<li>Mech_CentipedeGunner</li>
							<li>Mech_CentipedeBlaster</li>
							<li>Mech_CentipedeBurner</li>
							<li>Mech_Pikeman</li>
							<li>Mech_Crawler</li>
						</spawnablePawnKinds>
						<lordJob>LordJob_MechanoidsDefend</lordJob>
						<shouldJoinParentLord>True</shouldJoinParentLord>
					</li>
				</value>
			</li>
		</operations>
	</Operation>

</Patch>