<?xml version="1.0" encoding="utf-8"?>
<Patch>

	<Operation Class="PatchOperationAttributeSet">
		<xpath>Defs/ThingDef[@Name="LightMechanoid"]</xpath>
		<attribute>ParentName</attribute>
		<value>SK.SK_MechanoidThingBaseDummy</value>
	</Operation>

	<Operation Class="PatchOperationAttributeSet">
		<xpath>Defs/PawnKindDef[@Name="LightMechanoidKind"]</xpath>
		<attribute>ParentName</attribute>
		<value>SK.SK_BaseMechanoidKindDummy</value>
	</Operation>

	<Operation Class="SK.PatchOperationReplaceExtended">
		<xpath>Defs/ThingDef[@Name="LightMechanoid"]</xpath>
		<value>
			<butcherProducts>
				<TitaniumBar>2</TitaniumBar>
				<DepletedUranium>3</DepletedUranium>
				<CarbonAlloy>2</CarbonAlloy>
			</butcherProducts>
		</value>
	</Operation>

	<Operation Class="SK.PatchOperationReplaceExtended">
		<xpath>Defs/ThingDef[	defName="Mech_Lifter" or 
								defName="Mech_Constructoid" or 
								defName="Mech_Fabricor" or 
								defName="Mech_Agrihand" or 
								defName="Mech_Paramedic"
								]/comps/li[@Class="CombatExtended.CompProperties_ArmorDurability"]</xpath>
		<value>
			<Durability>700</Durability>
			<Repairable>true</Repairable>
			<RepairIngredients>
				<ComponentIndustrial>2</ComponentIndustrial>
				<Plasteel>10</Plasteel>
			</RepairIngredients>
			<RepairTime>300</RepairTime>
			<RepairValue>200</RepairValue>
			<CanOverHeal>true</CanOverHeal>
			<MaxOverHeal>70</MaxOverHeal>
			<MinArmorPct>0.75</MinArmorPct>
		</value>
	</Operation>

	<Operation Class="SK.PatchOperationReplaceExtended">
		<xpath>Defs/ThingDef[defName="Mech_WarUrchin"]/statBases</xpath>
		<value>
			<ArmorRating_Sharp>5</ArmorRating_Sharp>
			<ArmorRating_Blunt>8</ArmorRating_Blunt>
		</value>
	</Operation>

</Patch>