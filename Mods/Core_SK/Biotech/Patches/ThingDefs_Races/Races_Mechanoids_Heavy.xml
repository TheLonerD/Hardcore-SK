<Patch>

	<Operation Class="PatchOperationAttributeSet">
		<xpath>Defs/ThingDef[@Name="HeavyMechanoid"]</xpath>
		<attribute>ParentName</attribute>
		<value>SK.SK_MechanoidThingBaseDummy</value>
	</Operation>

	<Operation Class="PatchOperationAttributeSet">
		<xpath>Defs/PawnKindDef[@Name="HeavyMechanoidKind"]</xpath>
		<attribute>ParentName</attribute>
		<value>SK.SK_BaseMechanoidKindDummy</value>
	</Operation>
	

	<Operation Class="SK.PatchOperationReplaceExtended">
		<xpath>Defs/ThingDef[@Name="HeavyMechanoid"]/statBases</xpath>
		<value>
			<MoveSpeed>1.9</MoveSpeed>
			<ArmorRating_Blunt>15</ArmorRating_Blunt>
			<ArmorRating_Sharp>7</ArmorRating_Sharp>
			<ControlTakingTime>24</ControlTakingTime>
			<MechEnergyLossPerHP>0.2</MechEnergyLossPerHP>
		</value>
	</Operation>

	<Operation Class="SK.PatchOperationReplaceExtended">
		<xpath>Defs/ThingDef[@Name="HeavyMechanoid"]/race</xpath>
		<value>
			<intelligence>ToolUser</intelligence>
			<thinkTreeMain>Mechanoid</thinkTreeMain>
			<soundMeleeHitPawn>Pawn_Melee_Punch_HitPawn</soundMeleeHitPawn>
			<soundMeleeHitBuilding>Pawn_Melee_Punch_HitBuilding_Metal</soundMeleeHitBuilding>
			<soundMeleeMiss>Pawn_Melee_Punch_Miss</soundMeleeMiss>
			<mechWeightClass>Heavy</mechWeightClass>
		</value>
	</Operation>

	<Operation Class="SK.PatchOperationReplaceExtended">
		<xpath>Defs/ThingDef[@Name="HeavyMechanoid"]/butcherProducts</xpath>
		<value>
			<TitaniumBar>8</TitaniumBar>
			<DepletedUranium>9</DepletedUranium>
			<CarbonAlloy>6</CarbonAlloy>
		</value>
	</Operation>


