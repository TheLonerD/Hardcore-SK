			</costList>
		</value>
	</Operation>

	<Operation Class="PatchOperationReplace">
		<xpath>Defs/ThingDef[defName="Apparel_ArrayHeadset"]/recipeMaker/skillRequirements</xpath>
		<value>
		  <skillRequirements>
			<Crafting>13</Crafting>
		  </skillRequirements>
		</value>
	</Operation>

