<?xml version="1.0" encoding="UTF-8"?>
<Patch>

	<Operation Class="PatchOperationFindMod">
	<mods>
		<li>Rimatomics</li>
	</mods>
		<match Class="PatchOperationSequence">
			<operations>

			<li Class="PatchOperationAddModExtension">
			<xpath>Defs/HediffDef[defName="RadiationMechanoid"]</xpath>
				<value>
				  <li Class="Androids.MechanicalHediffProperties"/>
				</value>
			</li>

			<li Class="PatchOperationReplace">
			<xpath>Defs/HediffDef[defName="RadiationMechanoid"]/description</xpath>
				<value>
				  <description>Radiation damage, it effects the joints and wears down the material, causing decay. Some mechanical pawns can have their parts replaced to remove this.</description>
				</value>
			</li>

			</operations>
		</match>
    </Operation>
	
</Patch>